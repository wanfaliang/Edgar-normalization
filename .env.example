# SEC Financial Statement Data Project Configuration
# =====================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# SEC EDGAR Configuration
# -----------------------
SEC_USER_AGENT_EMAIL=your.email@example.com
SEC_USER_AGENT_COMPANY=YourCompany
SEC_USER_AGENT=YourCompany (your.email@example.com)

# AI Services Configuration
# --------------------------
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# SEC API rate limits
SEC_RATE_LIMIT_REQUESTS_PER_SECOND=10
SEC_RATE_LIMIT_DELAY=0.11

# Data Source URLs
# ----------------
SEC_BASE_URL=https://www.sec.gov/files/dera/data/
SEC_FINANCIAL_STATEMENTS_URL=https://www.sec.gov/files/dera/data/financial-statement-data-sets/

# Local Storage Configuration
# ---------------------------
DATA_BASE_DIR=data/sec_data
DOWNLOAD_DIR=data/sec_data/downloads
EXTRACTED_DIR=data/sec_data/extracted
PARQUET_DIR=data/sec_data/parquet
DATABASE_DIR=data/sec_data/database
LOGS_DIR=data/sec_data/logs
REPORTS_DIR=data/sec_data/reports

# Database Configuration (PostgreSQL)
# ------------------------------------
DEV_DB_HOST=localhost
DEV_DB_PORT=5432
DEV_DB_NAME=sec_financial_dev
DEV_DB_USER=your_username
DEV_DB_PASSWORD=your_secure_password_here

# Processing Configuration
# ------------------------
BATCH_SIZE=10000
CHUNK_SIZE=50000
MAX_WORKERS=4
CONCURRENT_DOWNLOADS=3

# Logging Configuration
# ---------------------
LOG_LEVEL=INFO
ENABLE_CONSOLE_LOG=true
ENABLE_FILE_LOG=true

# Development Settings
# --------------------
ENV=development
DEBUG=true
